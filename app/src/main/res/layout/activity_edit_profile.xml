<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <include
        android:id="@+id/toolbar_editProfile"
        layout="@layout/toolbar_edit_profile" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/editProfile_edit_text_full_name"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="221dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:alpha="0.5"
            android:hint="@string/full_name_hint"
            android:fontFamily="@font/inter_semi_bold"
            android:textColorHint="@color/sign_up_back_text"
            android:textColor="@color/primary_black"
            android:textSize="17sp"
            android:theme="@style/MyEditTextTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editProfile_edit_text_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:inputType="phone"
            android:alpha="0.5"
            android:hint="@string/phone_number_hint"
            android:fontFamily="@font/inter_semi_bold"
            android:textColorHint="@color/sign_up_back_text"
            android:textColor="@color/primary_black"
            android:textSize="17sp"
            android:theme="@style/MyEditTextTheme"
            app:layout_constraintEnd_toEndOf="@+id/editProfile_edit_text_full_name"
            app:layout_constraintStart_toStartOf="@+id/editProfile_edit_text_full_name"
            app:layout_constraintTop_toBottomOf="@+id/editProfile_edit_text_full_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editProfile_edit_text_password"
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:alpha="0.5"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="@+id/editProfile_edit_text_phone"
            app:layout_constraintStart_toStartOf="@+id/editProfile_edit_text_phone"
            app:layout_constraintTop_toBottomOf="@+id/editProfile_edit_text_phone"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textColor="@color/primary_black"
                android:textColorHint="@color/sign_up_back_text"
                android:textSize="17sp"
                android:theme="@style/MyEditTextTheme" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/profileEdit_button_create_account"
            android:layout_width="311dp"
            android:layout_height="46dp"
            android:layout_marginTop="33dp"
            android:text="@string/editProfileChangeBtn"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/editProfile_edit_text_password"
            app:layout_constraintStart_toStartOf="@+id/editProfile_edit_text_password"
            app:layout_constraintTop_toBottomOf="@+id/editProfile_edit_text_password" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
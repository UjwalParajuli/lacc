<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_law_read_details"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@color/primary_blue"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:id="@+id/image_view_law_read_details"
        android:layout_width="11.98dp"
        android:layout_height="20.79dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_law_read_details"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="149dp"
        android:foregroundGravity="center"
        android:text="@string/lawReadDetailsTitle"
        android:fontFamily="@font/inter_semi_bold"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.86sp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal|top"
        />
</androidx.appcompat.widget.Toolbar>
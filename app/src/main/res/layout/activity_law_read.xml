<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LawReadActivity">

    <include
        android:id="@+id/toolbar_law_read"
        layout="@layout/toolbar_law_read" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_law_read"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/toolbar_law_read"
        app:layout_constraintStart_toStartOf="@id/toolbar_law_read"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_law_read"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".VerificationCodeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/phoneverify_text"
            android:layout_width="311dp"
            android:layout_height="92dp"
            android:layout_marginTop="84dp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5sp"
            android:text="@string/verification_code_heading"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <com.chaos.view.PinView
            android:id="@+id/pinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            app:itemSpacing="16dp"
            app:lineColor="@color/inner_border"
            app:itemHeight="50dp"
            app:itemWidth="50dp"
            style="@style/PinWidget.PinView"
            android:cursorVisible="true"
            app:cursorColor="@color/black"
            app:itemRadius="7dp"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/phoneverify_text"
            app:layout_constraintStart_toStartOf="@+id/phoneverify_text"
            app:layout_constraintTop_toBottomOf="@+id/phoneverify_text">
        </com.chaos.view.PinView>


        <TextView
            android:id="@+id/verification_code_resend"
            android:layout_width="149dp"
            android:layout_height="18dp"
            android:layout_marginTop="45dp"
            android:gravity="right|top"
            android:letterSpacing="0"
            android:lineSpacingExtra="2sp"
            android:text="@string/verification_code_resend"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationY="-1.13sp"
            app:layout_constraintEnd_toEndOf="@+id/pinView"
            app:layout_constraintStart_toStartOf="@+id/pinView"
            app:layout_constraintTop_toBottomOf="@+id/pinView">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
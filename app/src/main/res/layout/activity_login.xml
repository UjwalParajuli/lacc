<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_heading"
            android:layout_width="311dp"
            android:layout_height="92dp"
            android:layout_marginTop="54dp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5sp"
            android:text="@string/sign_up_heading"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/login_edit_text_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="113dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:alpha="0.5"
            android:hint="@string/full_name_hint"
            android:fontFamily="@font/inter_semi_bold"
            android:textColorHint="@color/sign_up_back_text"
            android:textColor="@color/primary_black"
            android:textSize="17sp"
            android:theme="@style/MyEditTextTheme"

            app:layout_constraintEnd_toEndOf="@+id/login_heading"
            app:layout_constraintStart_toStartOf="@+id/login_heading"
            app:layout_constraintTop_toBottomOf="@+id/login_heading" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_edit_text_password"
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:alpha="0.5"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="@+id/login_edit_text_phone"
            app:layout_constraintStart_toStartOf="@+id/login_edit_text_phone"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_text_phone"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textColor="@color/primary_black"
                android:textColorHint="@color/sign_up_back_text"
                android:textSize="17sp"
                android:theme="@style/MyEditTextTheme" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="311dp"
            android:layout_height="46dp"
            android:layout_marginTop="45dp"
            android:text="@string/login_button"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="@+id/login_edit_text_password"
            app:layout_constraintStart_toStartOf="@+id/login_edit_text_password"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_text_password" />

        <TextView
            android:id="@+id/login_edit_text_forgotpw"
            android:layout_width="150dp"
            android:layout_height="18dp"
            android:layout_marginStart="194dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="right|top"
            android:letterSpacing="0"
            android:lineSpacingExtra="2sp"
            android:text="@string/forgot_pass"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationY="-1.13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_button" />


        <TextView
            android:id="@+id/login_text_view_newsignup"
            android:layout_width="180dp"
            android:layout_height="18dp"
            android:layout_marginTop="206dp"
            android:layout_marginBottom="77dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="top"
            android:letterSpacing="0"
            android:lineSpacingExtra="2sp"
            android:text="@string/new_signup"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationY="-1.13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_text_forgotpw">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


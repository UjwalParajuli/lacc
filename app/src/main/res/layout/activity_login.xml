<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_provideinfo"
            android:layout_width="311dp"
            android:layout_height="92dp"
            android:layout_marginTop="54dp"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center_vertical"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5sp"
            android:text="Please provide your information"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="311dp"
            android:layout_height="43dp"
            android:layout_marginTop="113dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your Phone Number"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@id/login_provideinfo"
            app:layout_constraintStart_toStartOf="@id/login_provideinfo"
            app:layout_constraintTop_toBottomOf="@+id/login_provideinfo" >

        </EditText>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            app:layout_constraintEnd_toEndOf="@+id/login_phone"
            app:layout_constraintStart_toStartOf="@+id/login_phone"
            app:layout_constraintTop_toBottomOf="@+id/login_phone"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_width="311dp"
                android:layout_height="43dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="17sp">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="311dp"
            android:layout_height="46dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="@+id/login_password"
            app:layout_constraintStart_toStartOf="@+id/login_password"
            app:layout_constraintTop_toBottomOf="@+id/login_password"
            android:text="Login"
            android:background="@drawable/signupbutton">
        </Button>

        <TextView
            android:id="@+id/login_forgotpsw"
            android:layout_width="311dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="right|top"
            android:letterSpacing="0"
            android:lineSpacingExtra="2sp"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationY="-1.13sp"
            app:layout_constraintEnd_toEndOf="@+id/login_btn"
            app:layout_constraintStart_toStartOf="@+id/login_btn"
            app:layout_constraintTop_toBottomOf="@+id/login_btn">

        </TextView>

        <TextView
            android:id="@+id/login_newsignup"
            android:layout_width="180dp"
            android:layout_height="18dp"
            android:layout_marginTop="206dp"
            android:layout_marginBottom="77dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="top"
            android:letterSpacing="0"
            android:lineSpacingExtra="2sp"
            android:text="New to LACC Nepal Sign Up"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationY="-1.13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/login_forgotpsw"
            app:layout_constraintStart_toStartOf="@+id/login_forgotpsw"
            app:layout_constraintTop_toBottomOf="@+id/login_forgotpsw">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


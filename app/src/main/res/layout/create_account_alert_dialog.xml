<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/alert_box_background"
    app:backgroundTint="@null"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center_horizontal|top"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="2sp"
        android:text="@string/create"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:translationY="-0.86sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/you_need_to"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textSize="13sp"
        android:lineSpacingExtra="0sp"
        android:translationY="-0.24sp"
        android:gravity="center_horizontal|top"
        android:letterSpacing="-0.01"
        android:textColor="@color/black"
        android:lineHeight="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/divider_alert_box"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bottom_border_alert_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button_create_account_alert_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center_horizontal|center_vertical"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="2sp"
        android:text="@string/create_now"
        android:textAllCaps="false"
        android:textColor="@color/alert_box_create_account"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/divider_alert_box"
        app:layout_constraintStart_toStartOf="@+id/divider_alert_box"
        app:layout_constraintTop_toBottomOf="@+id/divider_alert_box" />
</androidx.constraintlayout.widget.ConstraintLayout>
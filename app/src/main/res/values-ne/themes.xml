<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LACC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="font_regular">
        <item name="android:fontFamily">@font/arap_bk_regular</item>
    </style>

    <style name="font_semi_bold">
        <item name="android:fontFamily">@font/arap_bk_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_devanagari_regular">
        <item name="android:fontFamily">@font/devanagari_new_normal</item>
    </style>

    <style name="font_preeti_regular">
        <item name="android:fontFamily">@font/preeti_normal</item>
    </style>

    <style name="legal_aid_a">

        <item name="android:textSize">
            17sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="lacc">

        <item name="android:textSize">
            24sp
        </item>



        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#80111111</item>
        <item name="colorControlActivated">#80111111</item>
        <item name="colorControlHighlight">#80111111</item>
    </style>



    <style name="what_do_you">

        <item name="android:textSize">
            24sp
        </item>



        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="type_your_q">

        <item name="android:textSize">
            17sp
        </item>



        <item name="android:textColor">
            #80000000
        </item>

    </style>

    <style name="TextHint" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>